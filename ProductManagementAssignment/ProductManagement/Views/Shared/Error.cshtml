@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger" style="margin-top:1.5em;margin-bottom:0.5em;">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model != null)
{
    <p>
        @Model.Exception.GetType()<br />
        @Model.Exception.Message<br />
        thrown in @Model.ControllerName @Model.ActionName
    </p>
}